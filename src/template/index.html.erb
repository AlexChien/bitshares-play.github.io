<!DOCTYPE html>
<html>
  <head>
    <META NAME="ROBOTS" CONTENT="INDEX, FOLLOW">
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title><%= dd("head.title") %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="keyword" content="<%= dd("head.keyword") %>">
    <meta name="description" content="<%= dd("head.description") %>">

    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="img/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="img/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="img/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="img/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="img/ico/apple-touch-icon-57-precomposed.png">

    <!--[if lt IE 7]>
      <p class="chromeframe"><%= dd("head.browser_warn") %></p>
      <![endif]-->

    <!--[if lt IE 9]>
      <script src="/js/html5shiv.min.js"></script>
      <script src="/js/respond.min.js"></script>
    <![endif]-->

    <% if lang == 'zh-CN' %>
      <link href="//cdn.staticfile.org/twitter-bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <% else %>
      <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <% end %>
    <link href="css/vendor.min.css" rel="stylesheet">
    <link href="css/app.min.css" rel="stylesheet">
  </head>

  <body id="home">
    <!-- global nav -->
    <header class="navbar navbar-fixed-top global-nav" role="banner">
      <div class="container">
        <div class="navbar-header">
          <!--
          <a href="home" class="navbar-brand"><img src="img/logo.svg" alt="playshare.io-logo"><%= dd('head.title') %></a>
          -->
          <a href="home" class="navbar-brand"><%= dd('head.title') %></a>
          <span id="sub_title" class="navbar-sub-title"></span>
        </div>
        <!-- .navbar-header ends -->
        <nav id="main-nav" class="navigation" role="navigation">
          <button type="button" class="navbar-toggle btn btn-sm" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="navbar-collapse collapse bs-navbar-collapse">
            <ul class="nav navbar-nav navbar-right page-nav">
              <li class="active"><a href="#home"><%= dd('nav.home') %></a></li>
              <li><a href="#about"><%= dd('nav.about') %></a></li>
              <li><a href="#whitepaper"><%= dd('nav.whitepaper') %></a></li>
              <li><a href="#faq"><%= dd('nav.faq') %></a></li>
              <li><a href="#team"><%= dd('nav.team') %></a></li>
              <li><a href="#contact"><%= dd('nav.contact') %></a></li>
            </ul>
          </div>
        </nav>
        <!-- .navigation ends -->
      </div>
    </header>

    <!-- hero starts -->
    <section class="jumbotron container">
        <h1><%= dd('hero.line1') %></h1>
        <p><%= dd('hero.line2') %></p>
        <p><a class="btn btn-primary btn-lg" role="button">Learn more</a></p>
    </section>
    <!--hero ends -->


    <!-- feature starts -->
    <div id="about" class="container">
      <div class="row">
        <% dd('about.feature').each do |feature| %>
          <div class="col-lg-4">
            <img class="img-circle" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Generic placeholder image" style="width: 140px; height: 140px;">
            <h2><%= feature['title'] %></h2>
            <p><%= feature['intro'] %></p>
            <p><a class="btn btn-default" href="#" role="button"><%= dd('button.view_detail') %></a></p>
          </div><!-- /.col-lg-4 -->
        <% end %>
      </div><!-- /.row -->
    </div>
    <!-- feature ends -->

    <!-- whitepaper starts -->
    <section id="whitepaper">
      <div class="container">
        <h1><%= dd('whitepaper.title') %></h1>
      </div>
    </section>
    <!--whitepaper ends -->



    <!-- faq starts -->
    <section id="faq">
      <div class="container">
        <h1><%= dd('faq.title') %></h1>
        <% dd('faq.qas').each do |qa| %>
          <h2><%= qa["q"] %></h2>
          <p><%= qa["a"] %></p>
        <% end %>

      </div>
    </section>
    <!--faq ends -->



    <!-- team starts -->
    <section id="team">
      <div class="container">
        <h1><%= dd('team.title') %></h1>
        <% dd('team.members').each do |team| %>
          <h2><%= team["name"] %></h2>
          <p><%= team["bio"] %></p>
        <% end %>
      </div>
    </section>
    <!--team ends -->


    <section id="contact">
      <div class="container">
        <h1><%= dd('contact.title') %></h1>
      </div>
    </section>

    <% if lang == 'zh-CN' %>
      <script src="//lib.sinaapp.com/js/jquery/1.10.2/jquery-1.10.2.min.js"></script>
      <script src="//cdn.staticfile.org/twitter-bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <% else %>
      <script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
      <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <% end %>
   <script src="js/vendor.min.js"></script>
    <script src="js/app.min.js"></script>

    <!-- ga starts -->
    <%= render :partial => "ga" %>
    <!-- ga ends -->
  </body>
</html>

